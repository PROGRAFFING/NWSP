	{# featured posts #}

	<section class="featured-posts u-gray">

		<div class="container featured__container" data-aos="fade-down-short" data-aos-duration="1000">
			<div class="row featured__row">
				{% for post in featured %}
					<div class="col-xs-12 col-md-6 featured_col">
						<a href="{{ post.link }}">
							<img class="img-fluid" src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}">
						</a>
						<div class="featured__heading">
							<a href="{{ post.link }}">
								<h4 class="t-title t-title--small">
									{{ post.title }}
								</h4>
							</a>
							<p class="t-p-serif">{{ post.preview.length(20).force.read_more('<span class="t-link">Czytaj więcej</span>') }}</p>
						</div>
					</div>
				{% endfor %}

			</div>
		</div>
	</section>

	{# last news #}
	<section class="posts">
		<div class="container posts__container">
			<div class="posts__row-title">
				<h2 class="section-title posts__heading t-title">
					Ostatnie wpisy
				</h2>
			</div>
			<div class="posts__row">
				{%set i = 1 %}
				{%set delay = 0 %}

				{% for post in posts %}
					<div class="post__col post__col--{{ i }}" data-aos="fade-down-short" data-aos-duration="1000" data-aos-delay="{{ delay }}">
						<a href="{{ post.link }}"><img src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}" class="img-fluid"></a>
						<a href="{{ post.link }}">
							<h3 class="post__title t-title t-title--small">{{ post.title }}</h3>
						</a>
						<p class="post__excerpt t-p--serif">{{post.preview.length(20).force   }}</p>


						<span class="post__date">{{ post.date }}</span>
						<a class="post__cat" href="{{ post.category.link }}">{{ post.category }}</a>
					</div>
					{% set delay = delay + 300 %}
					{% set i = i + 1 %}
				{% endfor %}
			</div>

			<div class="post__btn-wrapper">
				<a href="#" class="btn btn--accent">Zobacz wszystkie wpisy</a>
			</div>
		</div>
	</section>


