				<div class="row featured__row">
					{% for post in featured %}
						<div class="col-xs-12 col-md-6 featured_col">
							<a href="{{ post.link }}">
								<img class="img-fluid" src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}">
							</a>
							<div class="featured__heading">
								<a href="{{ post.link }}">
									<h4 class="t-title t-title--small">
										{{ post.title }}
									</h4>
								</a>
